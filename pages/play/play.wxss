/* pages/play/play.wxss */
.bg{
	position: fixed;
	width: 100%;
	height: 100%;
	background-color: black;
}
.bg image{
	position: fixed;
	width: 170%;
	height: 100%;
	opacity: 0.5;
}
.name{
	text-align: center;
	font-size: 65rpx;
	color:white;
	position: relative;
	width: 100%;
	height: 200rpx;
	line-height: 200rpx;
}
.pan1{
	width: 100%;
	height: 800rpx;
	position: relative;
}
.item1 image{
	width: 450rpx;
	height: 450rpx;
	border-radius: 50%;
	border: 70rpx solid #333;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	animation: playimg 20s linear infinite;
	box-shadow: 3rpx 3rpx 10rpx black;
}
@keyframes playimg{
	0%{
		transform: rotate(0deg);
	}
	100%{
		transform: rotate(360deg);
	}
}
.item1 .clear{
	animation-play-state: paused;
}
.box{
	height: 120rpx;
	width: 100%;
	background: red;
	position: fixed;
	bottom: 0;
	padding: 20rpx;
}
.box image{
	display: block;
	height: 120rpx;
	width: 120rpx;
	float: left;
	margin: 0 12rpx;
}
.item2 {
	height: 600rpx;
	width: 100%;

}
.item2 .scr{
	height: 760rpx;

}
.scr view{
	text-align: center;
	color: #ccc;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 32rpx;
}
.scr .color{
	color: white;
	font-size: 35rpx;
}
/* 进度条*/
.timebox{
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 140rpx;
}
.timebox view,.timebox slider{
	float: left;
	height: 100rpx;
	line-height: 100rpx;
}
.timebox view{
	color: white;
	width: 20%;
	text-align: center;
}
.timebox slider{
	width: 60%;
	margin: 0;
	margin-top: 28rpx;

}